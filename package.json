{
  "name": "alex_dalene_exam2",
  "version": "1.3.0",
  "description": "Website for an Auction House",
  "main": "src/index.js",
  "author": "Alex Dalene <aledal51469@stud.noroff.no>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src",
    "cypress": "cypress open",
    "cypress-cli": "cypress run",
    "format": "prettier --write src",
    "test": "jest src",
    "start": "live-server",
    "build": "postcss ./src/css/input.css -o ./public/css/output.css",
    "watch": "postcss --watch ./src/css/input.css -o ./public/css/output.css & yarn start",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "7.19.3",
    "@babel/preset-env": "7.19.4",
    "autoprefixer": "^10.4.16",
    "cypress": "^13.6.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": ">=6",
    "jest": "29.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": ">=10",
    "live-server": "1.2.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "tailwindcss": "^3.3.6"
  },
  "eslintConfig": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier",
      "cypress",
      "jest"
    ],
    "env": {
      "cypress/globals": true,
      "jest/globals": true
    },
    "rules": {
      "prettier/prettier": "warn"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "*.html": [
      "prettier --write --ignore-unknown"
    ]
  }
}
